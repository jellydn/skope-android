<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />
            <stroke android:width="0.5dp" android:color="@color/dark_gray" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/white" />
            <stroke android:width="0.5dp" android:color="@color/light_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_gray" android:startColor="@color/light_gray" />
            <stroke android:width="0.5dp" android:color="@color/dark_gray" />
        </shape>
    </item>
</selector>
