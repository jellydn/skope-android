<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/button_disable" android:startColor="@color/button_disable" />
            <stroke android:width="0.5dp" android:color="@color/button_disable" />
            <corners android:bottomLeftRadius="@dimen/default_layout_conner" android:bottomRightRadius="@dimen/default_layout_conner" android:topLeftRadius="@dimen/default_layout_conner" android:topRightRadius="@dimen/default_layout_conner" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_blue" android:startColor="@color/light_blue" />
            <stroke android:width="0.5dp" android:color="@color/light_gray" />
            <corners android:bottomLeftRadius="@dimen/default_layout_conner" android:bottomRightRadius="@dimen/default_layout_conner" android:topLeftRadius="@dimen/default_layout_conner" android:topRightRadius="@dimen/default_layout_conner" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/main" android:startColor="@color/main" />
            <stroke android:width="0.5dp" android:color="@color/light_gray" />
            <corners android:bottomLeftRadius="@dimen/default_layout_conner" android:bottomRightRadius="@dimen/default_layout_conner" android:topLeftRadius="@dimen/default_layout_conner" android:topRightRadius="@dimen/default_layout_conner" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_gray" android:startColor="@color/light_gray" />
            <stroke android:width="0.5dp" android:color="@color/dark_gray" />
            <corners android:bottomLeftRadius="@dimen/default_layout_conner" android:bottomRightRadius="@dimen/default_layout_conner" android:topLeftRadius="@dimen/default_layout_conner" android:topRightRadius="@dimen/default_layout_conner" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_blue" android:startColor="@color/light_blue" />
            <stroke android:width="0.5dp" android:color="@color/light_gray" />
            <corners android:bottomLeftRadius="@dimen/default_layout_conner" android:bottomRightRadius="@dimen/default_layout_conner" android:topLeftRadius="@dimen/default_layout_conner" android:topRightRadius="@dimen/default_layout_conner" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/light_gray" android:startColor="@color/light_gray" />
            <stroke android:width="0.5dp" android:color="@color/dark_gray" />
            <corners android:bottomLeftRadius="@dimen/default_layout_conner" android:bottomRightRadius="@dimen/default_layout_conner" android:topLeftRadius="@dimen/default_layout_conner" android:topRightRadius="@dimen/default_layout_conner" />
        </shape>
    </item>
</selector>
