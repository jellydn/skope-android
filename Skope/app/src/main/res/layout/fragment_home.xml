<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/image_background_home"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/image_background_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Layout top -->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:layout_marginBottom="16dp"
            android:text="Within you area we have found:" />

        <!-- Layout information -->
        <LinearLayout
            android:id="@+id/layout_information"
            android:paddingLeft="35dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingRight="35dp"
            android:layout_below="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- List user -->
            <RelativeLayout
                android:id="@+id/layout_to_list_user"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/img_btn_to_list_user"
                    android:adjustViewBounds="@bool/adjustViewBounds"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_left" />
                <!-- Layout list user -->
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="61"
                        android:singleLine="true"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="users"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="0"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <!-- List post -->
            <RelativeLayout
                android:id="@+id/layout_to_list_post"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_centerVertical="true"
                    android:id="@+id/img_btn_to_list_post"
                    android:adjustViewBounds="@bool/adjustViewBounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right" />

                <!-- Layout list post -->
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="2k"
                        android:singleLine="true"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="posts"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_below_information"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/layout_information"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="0.5dp" />

        <!-- Layout Radius -->
        <LinearLayout
            android:id="@+id/layout_radius"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/view_below_information"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:textColor="#ffffff"
                android:text="Radius" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="10km" />
        </LinearLayout>

        <!-- Radar -->
        <FrameLayout
            android:layout_below="@+id/layout_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <dev.skope.ui.CircularSeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <!-- Layout bottom -->
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">

            <dev.skope.ui.CircleImageView
                android:id="@+id/img_btn_my_profile"
                android:layout_alignParentRight="true"
                android:src="@drawable/demo_image"
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/txt_btn_compose_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compose Post"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textStyle="bold"
                android:background="@drawable/selector_button_compose_post" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_to_list_my_message"
                android:src="@drawable/ic_menu_left"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
