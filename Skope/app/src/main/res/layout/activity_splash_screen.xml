<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_splash"
    tools:context="dev.skope.SplashScreen.SplashScreen">

    <ImageView
        android:id="@+id/img_logo_text"
        android:adjustViewBounds="@bool/adjustViewBounds"
        android:src="@drawable/image_logo_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:animateLayoutChanges="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:singleLine="true"
        android:visibility="gone"
        android:id="@+id/txt_btn_login_facebook"
        android:background="@drawable/selector_button_login_facebook"
        android:layout_centerInParent="true"
        android:text="Sign In with Facebook"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_facebook"
        android:drawablePadding="8dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
