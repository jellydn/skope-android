<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/temp_avatar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Send Message" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_of_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'s Posts"
                android:textColor="#30b2e6" />
        </LinearLayout>

        <com.productsway.skope.custom.ExpandableHeightListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lst_posts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null" />
    </LinearLayout>

</ScrollView>